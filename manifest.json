{
  "manifest_version": 3,
  "name": "YouTube PiP Overlay Button",
  "version": "1.0",
  "description": "Adds a Picture-in-Picture button overlay to every YouTube video.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
