{
  "manifest_version": 3,
  "name": "YouTube PiP Button",
  "version": "1.0",
  "description": "Add a button to toggle Picture-in-Picture on YouTube.",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}